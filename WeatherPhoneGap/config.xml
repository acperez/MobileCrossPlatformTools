<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns = "http://www.w3.org/ns/widgets" xmlns:gap = "http://phonegap.com/ns/1.0" id = "es.tid.phonegap.weather" version = "1.0.0">

	<name>WeatherPhoneGap</name>

	<description>
		Weather testing application
	</description>

	<author	email="acperez@tid.es">
		Albert
	</author>

	<gap:platforms>
		<gap:platform name="ios" />
		<gap:platform name="android" minVersion="2.1" />
		<gap:platform name="webos" />
		<gap:platform name="symbian.wrt" />
		<gap:platform name="blackberry" project="widgets"/>
	</gap:platforms>

	<icon src="icon.png" gap:role="default" />

	<feature name="http://api.phonegap.com/1.0/geolocation"/>
	<feature name="http://api.phonegap.com/1.0/network"/>
	<feature name="http://api.phonegap.com/1.0/file"/>

	<preference name="autorotate" value="false" readonly="true"/>
	<preference name="orientation" value="portrait"/>
</widget>